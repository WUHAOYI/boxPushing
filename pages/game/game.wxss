/**game.wxss**/
/* 游戏画布样式 */
canvas {
  border: 1rpx solid;
  width: 320px;
  height: 320px;
}

/* 方向键按钮整体区域 */
.btnBox {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 方向键按钮第二行 */
.btnBox view {
  display: flex;
  flex-direction: row;
}
.btnBox button{
background-color: brown;
}
.btnBox button text{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.manner{
  display: flex;
  flex-direction: row;
}
